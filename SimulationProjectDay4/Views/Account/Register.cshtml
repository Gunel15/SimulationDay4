@using SimulationProjectDay4.ViewModels.Account
@model RegisterVM
<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height"
         data-bg-image="assets/images/breadcrumb/bg/1-1-1919x388.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Login & Register Page</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home</a>
                            </li>
                            <li>Login | Register</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="login-register-area section-space-y-axis-100">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 pt-5 pt-lg-0">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <form method="post" asp-action="Register">
                        <div class="login-form">
                            <h4 class="login-title">Register</h4>
                            <div class="row">
                                <div class="col-md-6 col-12">
                                    <label asp-for="FullName">Fullname</label>
                                    <input asp-for="FullName" type="text" placeholder="Fullname" />
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Username">Username</label>
                                    <input asp-for="Username" type="text" placeholder="Username" />
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Email">Email</label>
                                    <input asp-for="Email" type="text" placeholder="Email" />
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="Password">Password</label>
                                    <input asp-for="Password" type="text" placeholder="Password" />
                                </div>
                                <div class="col-md-6 col-12">
                                    <label asp-for="RepeatPassword">RepeatPassword</label>
                                    <input asp-for="RepeatPassword" type="text" placeholder="Repeat password" />
                                </div>
                                
                              
                                <div class="col-12">
                                    <button class="btn btn-custom-size lg-size btn-pronia-primary">
                                        Register
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>